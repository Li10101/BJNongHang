<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_sliding_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_work_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/user_request_fix" />

        <TextView
            android:id="@+id/tv_work_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="客户报修" />

        <com.xyl.ui.widget.NotifyTextView
            android:id="@+id/tv_notify_count"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_notify"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#cecece" />

</LinearLayout>