<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/tv_mingxi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="报销明细"/>
        <TextView
            android:id="@+id/tv_detail"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="删除"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/bag_gray"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/flag"
            android:text="报销类别" />

        <EditText
            android:id="@+id/et_reimbur_type"
            android:background="@drawable/edit_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:drawablePadding="5dp"
            android:textSize="14sp"
            android:gravity="right"
            android:hint="如：采购经费，活动经费"
            android:textColor="#bfbfbf" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/bag_gray"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:drawableLeft="@drawable/flag"
            android:text="报销金额(元)" />

        <EditText
            android:id="@+id/et_reimbur_price"
            android:background="@drawable/edit_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:hint="请输入"
            android:inputType="numberDecimal"
            android:textColor="#bfbfbf" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/bag_gray"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/flag"
            android:text="费用明细" />

        <EditText
            android:id="@+id/et_cost_detail"
            android:background="@drawable/edit_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="4"
            android:gravity="top"
            android:maxLines="10"
            android:textSize="14sp"
            android:hint="请输入费用明细描述"
            />


    </LinearLayout>

</LinearLayout>