<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#DFDFDF"
    android:paddingBottom="5dp"
    android:visibility="visible"
    >
    <Button
        android:id="@+id/toolbar_left_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/comment_left"
        android:visibility="visible"/>

    <EditText
        android:layout_toRightOf="@id/toolbar_left_btn"
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_search"
        android:hint=" 搜索"
        android:singleLine="true"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_search_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:paddingTop="3dp"
        android:src="@drawable/search_iv" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/iv_search_click"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-8dp"
        android:background="#aeaeae"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tv_search_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:paddingTop="3dp"
        android:text="取消"
        android:textColor="#660000FF"
        android:textSize="15sp"
        android:visibility="gone" />

</RelativeLayout>