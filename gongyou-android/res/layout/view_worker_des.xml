<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_work_dess">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:text="工人描述"
        android:textSize="20sp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="5dp"
        android:background="#cecece" />

    <com.xyl.ui.view.WorkDesListView
        android:id="@+id/lv_workdes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/viewcolor"
        android:dividerHeight="1px"
        >
    </com.xyl.ui.view.WorkDesListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eeeeee" />
    <RelativeLayout
        android:id="@+id/rl_worker_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_workdes_tp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/take_photos" />

        <ImageView
            android:id="@+id/iv_workdes_ap"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/add_photos" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eeeeee" />
</LinearLayout>
