<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_5a79b7"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cate_name"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:background="@color/frament_tab_color"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:text="注释"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null">

            <ImageView
                android:id="@+id/product_imageView"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_stub" />

            <TextView
                android:id="@+id/product_building"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/product_imageView"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="所属楼宇"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/product_salecount_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_building"
                android:layout_toRightOf="@id/product_imageView"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="库存  2366"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/product_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_salecount_view"
                android:layout_toRightOf="@id/product_imageView"
                android:lines="1"
                android:text="商品名称"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/product_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_name_view"
                android:layout_toRightOf="@id/product_imageView"
                android:text="品牌"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/product_specifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_brand"
                android:layout_toRightOf="@id/product_imageView"
                android:text="规格"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/product_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_specifi"
                android:layout_toRightOf="@id/product_imageView"
                android:text="型号"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/product_price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_model"
                android:layout_toRightOf="@id/product_imageView"
                android:lines="1"
                android:maxEms="10"
                android:text="￥2.28"
                android:textColor="@color/black"
                android:textSize="12sp" />


            <ImageView
                android:id="@+id/delete_product_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/product_price_view"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/product_imageView"
                android:background="@drawable/del"
                android:visibility="gone" />

            <EditText
                android:id="@+id/add_count_view"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_price_view"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/product_imageView"
                android:background="@drawable/edit_back"
                android:hint="0"
                android:inputType="numberDecimal"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/black"
                android:textSize="10sp" />
            <!-- <TextView
                 android:id="@+id/add_count_view"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:paddingLeft="3dp"
                 android:paddingRight="3dp"
                 android:text="20"
                 android:textColor="@color/white"
                 android:textSize="14sp"
                 android:visibility="gone" />-->

            <!--<ImageView-->
            <!--android:id="@+id/add_product_view"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_below="@id/product_price_view"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginLeft="0dp"-->
            <!--android:layout_marginTop="-8dp"-->
            <!--android:layout_toRightOf="@id/add_count_view"-->
            <!--android:background="@drawable/add" />-->
            <TextView
                android:id="@+id/add_product_view"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_price_view"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/add_count_view"
                android:gravity="center"
                android:textSize="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="@drawable/text_back"
                android:text="添加" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>