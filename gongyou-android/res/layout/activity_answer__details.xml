<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.AnswerDetailsActivity"
    android:orientation="vertical">

    <include layout="@layout/answer_title"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/answer_back"
        >

        <com.xyl.ui.widget.answer.HomeWorkViewPager
            android:id="@+id/view_pager"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="@dimen/dp_50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.xyl.ui.widget.answer.HomeWorkViewPager>
    </FrameLayout>

</LinearLayout>