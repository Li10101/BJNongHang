<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/tv_mingxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="明细"/>
        <TextView
            android:id="@+id/tv_delete"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="删除"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/bag_gray"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/flag"
            android:text="物品名称" />
        <EditText
            android:id="@+id/et_goods_name"
            android:background="@drawable/edit_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:hint="请输入"
            android:textColor="#bfbfbf" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/bag_gray"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="8dp"
            android:text="规格型号" />

        <EditText
            android:id="@+id/et_type"
            android:background="@drawable/edit_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:hint="请输入"
            android:textColor="#bfbfbf" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_danjia"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/bag_gray"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/flag"
            android:text="单价(元)" />

        <EditText
            android:id="@+id/et_price"
            android:background="@drawable/edit_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:hint="请输入"
            android:textColor="#bfbfbf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/bag_gray"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/flag"
            android:text="数量" />

        <EditText
            android:id="@+id/et_number"
            android:background="@drawable/edit_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:hint="请输入"
            android:textColor="#bfbfbf" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_unit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/bag_gray"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/flag"
            android:text="单位" />

        <EditText
            android:id="@+id/et_unit"
            android:background="@drawable/edit_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:hint="请输入"
            android:textColor="#bfbfbf" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/bag_gray"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_zongjia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/flag"
            android:text="总价" />

        <EditText
            android:id="@+id/et_total_price"
            android:background="@drawable/edit_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:hint="请输入"
            android:textColor="#bfbfbf" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_purpose"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/bag_gray"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/flag"
            android:text="用途" />

        <EditText
            android:id="@+id/et_purpose"
            android:background="@drawable/edit_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:textSize="14sp"
            android:hint="请输入"
            android:textColor="#bfbfbf" />

    </LinearLayout>



</LinearLayout>
